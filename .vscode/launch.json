{
    // VSCode调试配置文件的版本号，指定配置文件格式版本
    "version": "0.2.0",
    // 调试配置数组，可以包含多个不同的调试配置
    "configurations":[

        {
            // 调试配置的显示名称，会在VSCode的调试下拉菜单中显示
            "name": "Make build and debug",
            // 调试器类型，cppdbg用于C/C++程序调试
            "type": "cppdbg",
            // 请求类型，launch表示启动新进程进行调试（而非attach到已运行进程）
            "request": "launch",
            // 要调试的可执行文件路径，${workspaceFolder}是VSCode的内置变量，指向工作区根目录
            "program": "${workspaceFolder}/build/riscv32-nemu-interpreter",
            // 传递给程序的命令行参数数组，当前为空数组表示无参数
            "args": [],
            // 是否在程序入口点（main函数）处自动停止，false表示直接运行
            "stopAtEntry": false,
            // 调试时的工作目录，程序运行时的当前目录
            "cwd": "${workspaceFolder}",
            // 环境变量数组，可设置程序运行时的环境变量，当前为空
            "environment": [],
            // 是否使用外部控制台窗口，false表示在VSCode内置终端中显示输出
            "externalConsole": false,
            // 调试器模式，指定使用GDB作为底层调试器
            "MIMode": "gdb",
            // GDB初始化命令数组，在调试开始前执行的GDB命令
            "setupCommands": [
                {
                    // 命令描述，用于标识这个命令的作用
                    "description": "Enable pretty-printing for gdb",
                    // 实际执行的GDB命令，启用GDB的美化打印功能，让复杂数据结构显示更友好
                    "text": "-enable-pretty-printing",
                    // 如果命令执行失败是否忽略错误，true表示即使失败也继续调试
                    "ignoreFailures": true
                }
            ],
            // 调试前要执行的任务名称，被注释掉表示不执行预构建任务
            // "preLaunchTask": "Make build",
            // GDB调试器的可执行文件路径，指定系统中GDB的位置
            "miDebuggerPath": "/usr/bin/gdb"
        },
    ]
}
